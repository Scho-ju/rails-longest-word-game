
<% @grid.each do |letter| %>
  <button type="button" class="btn btn-primary btn-lg"><%= letter %></button>
<% end %>

<form action="/score" method="get">
  <input type="text" name="word" placeholder="What's your word?">
  <input type="submit">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @grid %>
</form>
